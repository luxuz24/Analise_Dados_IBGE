<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.AnaliseController">

    <left>
        <VBox prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Análise:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="comboTabela" prefWidth="250.0" promptText="Selecione a Tabela" />

                <Label text="Ano:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="comboAno" prefWidth="250.0" promptText="Selecione o Ano" />

                <Label text="Grandes Regiões:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="comboRegiao" prefWidth="250.0" promptText="Selecione a Região" />

                <Label text="Tipo de Conexão:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <CheckBox fx:id="checkSelecionarTodos" mnemonicParsing="false" onAction="#onCheckSelecionarTodosClick" text="Selecionar Todos">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </CheckBox>

                <ListView fx:id="listTiposConexao" prefHeight="200.0" prefWidth="200.0" />

                <Button fx:id="btnBuscar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onBtnBuscarClick" text="Analisar">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tabelaPrincipal" prefHeight="600.0" prefWidth="630.0" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
